{%- render 'section-main-collection',
    section: section,
    collection: collection,
    cart: cart,
    show_sidebar: true,
    total_tags: 0,
    enable_sidebar: section.settings.enable_sidebar,
    collection_filters_size: collection.filters.size,
    paginate_by: 100,
    current_filter_size: 0,
    enable_color_swatches: section.settings.enable_color_swatches,
    tags_combine: false,
    enable_sort: section.settings.enable_sort,
    collapse_filters: section.settings.collapse_filters,
    quick_shop_enable: settings.quick_shop_enable,
    quick_add_enable: settings.quick_add_enable,
    product_grid_image_size: settings.product_grid_image_size,
    product_grid_image_fill: settings.product_grid_image_fill,
    product_hover_image: settings.product_hover_image,
    enable_swatches: settings.enable_swatches,
    vendor_enable: settings.vendor_enable,
    product_save_amount: settings.product_save_amount,
    product_save_type: settings.product_save_type,
    page_image: page_image,
    hydration: 'on:idle',
    collection_grid_image: settings.collection_grid_image,
    collection_grid_shape: settings.collection_grid_shape,
    collection_grid_image_fill: settings.collection_grid_image_fill,
    set_image_breathing_room: true,
    product_grid_style: settings.product_grid_style,
-%}

{% schema %}
{
  "name": "t:labels.product_grid",
  "settings": [
    {
      "type": "header",
      "content": "t:labels.filtering_and_sorting"
    },
    {
      "type": "checkbox",
      "id": "enable_sidebar",
      "label": "t:actions.enable_filter",
      "default": true,
      "info": "t:info.allow_your_customers_to_filter"
    },
    {
      "type": "checkbox",
      "id": "collapse_filters",
      "label": "t:actions.collapse_filters",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_color_swatches",
      "label": "t:actions.enable_color_swatches",
      "info": "t:actions.view_setup_instructions"
    },
    {
      "type": "checkbox",
      "id": "enable_sort",
      "label": "t:actions.show_sort_options",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection_description",
      "name": "t:labels.collection_description",
      "limit": 1
    },
    {
      "type": "product_grid",
      "name": "t:labels.products",
      "settings": [
        {
          "type": "select",
          "id": "grid_style",
          "label": "t:labels.default_product_layout",
          "default": "small",
          "options": [
            {
              "value": "large",
              "label": "t:labels.sizes.large_grid"
            },
            {
              "value": "small",
              "label": "t:labels.sizes.small_grid"
            },
            {
              "value": "list",
              "label": "t:labels.list"
            }
          ]
        }
      ],
      "limit": 1
    },
    {
      "type": "subcollections",
      "name": "t:labels.subcollections",
      "settings": [
        {
          "type": "paragraph",
          "content": "t:info.links_to_collections_appear_here"
        }
      ],
      "limit": 1
    }
  ]
}
{% endschema %}
