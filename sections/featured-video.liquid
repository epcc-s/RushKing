{%- render 'section-featured-video',
    section: section,
    divider: section.settings.divider,
    title: section.settings.title,
    video_url: section.settings.video_url,
    color_button: settings.color_button
-%}

{% schema %}
{
  "name": "t:labels.video",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:labels.heading"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "t:labels.video_link",
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:actions.show_section_divider",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:labels.video"
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
